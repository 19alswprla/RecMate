<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold"
    tools:context=".MainEquip">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:shadowColor="@color/black"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="10"
        android:text="CoRec Equipment"
        android:textAlignment="center"
        android:textColor="@color/gold"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_below="@id/textView"
        android:background="@color/transparent"
        android:src="@drawable/purdue_logo" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView"
        android:layout_above="@+id/button3"
        android:layout_margin="16dp"
        android:background="@drawable/border_format">

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/ScrollView"
            android:layout_height="match_parent"
            android:padding="11dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Exercise Equipment 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="A1. Push - Chest"
                    android:id="@+id/TextView1"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />
                <!-- Exercise Equipment 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="A2. Push - Shoulder"
                    android:id="@+id/TextView2"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="A3. Push - Triceps"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="B1. Pull - Back"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="B2. Pull - Bicep"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/gold"
                    android:text="B3. Pull - Forearms"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="C1. Legs"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="D1. Cardio"
                    android:textColor="@color/gold"
                    android:textSize="18sp" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/border_format"
        android:text="BACK"
        android:textColor="@color/gold" />

</RelativeLayout>